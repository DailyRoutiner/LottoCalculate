<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UNITSTATS">
	<resultMap type="UnitStatsDTO" id="UnitStatsResultMap">
		<result property="unitId" column="UNIT_ID" />
		<result property="unitNumber" column="UNIT_NUMBER" />
		<result property="unitFrequency" column="UNIT_FREQUENCY" />
	</resultMap>

	<select id="unitPriority" resultMap="UnitStatsResultMap">
		SELECT UNIT_ID
		FROM UNIT_STATS
		WHERE ROWNUM >= 3
		ORDER BY UNIT_FREQUENCY ASC;
	</select>
	
	<update id="updateUnitFrequency" parameterType="UnitStatsResultMap">
		UPDATE UNIT_STATS
		SET UNIT_FREQUENCY = #{unitFrequency}
		WHERE UNIT_ID = #{unitId}
	</update>
</mapper>