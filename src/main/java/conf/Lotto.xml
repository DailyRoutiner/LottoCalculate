<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="LOTTO">
	<resultMap type="LottoDTO" id="lottoResultMap">
		<result property="lottonumber" column="LOTTONUMBER" />
		<result property="count" column="COUNT" />
	</resultMap>

	<!-- LOTTO 테이블 불러오기  -->
	<select id="lottoNumList" resultMap="lottoResultMap">
		SELECT * FROM LOTTONUM;
	</select>
	
	<!-- 단위별 횟수 구하기 -->
	<select id="SelectUnitFrequency" parameterType="String" resultMap="lottoResultMap">
	    SELECT count(UNIT_ID_FK)
		FROM NUMERAL_STATS
		WHERE UNIT_ID_FK = '#{unitId}';
	</select>

</mapper>
